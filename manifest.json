{
    "manifest_version": 2,
    "name": "My Cool Extension",
    "description": "This is a neat Chrome extension",
    "version": "1.0",
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/sample.png",
        "48": "images/sample.png",
        "128": "images/sample.png"
      }
    },
    "permissions": [
        "tabs"
      ]      
  }
  